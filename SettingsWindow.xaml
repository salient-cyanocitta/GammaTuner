<Window x:Class="GammaTuner.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GammaTuner"
        mc:Ignorable="d"
        Title="More Settings (GammaTuner)" Height="453" Width="476" MinWidth="427" MinHeight="281" ResizeMode="NoResize">
    <Grid>
        <CheckBox x:Name="MinimizeToTrayCheckbox" Content="Minimize to tray" HorizontalAlignment="Left" Margin="19,20,0,0" VerticalAlignment="Top" IsChecked="False" Checked="MinimizeToTrayCheckbox_CheckedUnchecked" Unchecked="MinimizeToTrayCheckbox_CheckedUnchecked" ToolTip="Minimize to tray when the minimize button is selected. The Close button still exits the app."/>
        <CheckBox x:Name="RunOnStartupCheckbox" Content="Run On Startup" HorizontalAlignment="Left" Margin="19,53,0,0" VerticalAlignment="Top" Checked="RunOnStartupCheckbox_CheckedUnchecked" Unchecked="RunOnStartupCheckbox_CheckedUnchecked" ToolTip="Adds the app to the shell:startup folder when checked and applied. Uncheck and apply to remove it."/>
        <TextBox x:Name="HDRSettingsFileTextBox" HorizontalAlignment="Left" Margin="185,113,0,0" VerticalAlignment="Top" Width="183" TextChanged="HDRSettingsFileTextBox_TextChanged"/>
        <Button x:Name="HDRSettingsFileBrowseButton" Content="Browse" HorizontalAlignment="Left" Margin="383,111,0,0" VerticalAlignment="Top" Click="HDRSettingsFileBrowseButton_Click" RenderTransformOrigin="0.562,0.765"/>
        <CheckBox x:Name="LoadSettingsFileHDRCheckbox" Content="Load Settings File (HDR):" HorizontalAlignment="Left" Margin="19,114,0,0" VerticalAlignment="Top" Checked="LoadSettingsFileHDRCheckbox_CheckedUnchecked" Unchecked="LoadSettingsFileHDRCheckbox_CheckedUnchecked" ToolTip="This does nothing on its own unless you enable switching of profiles when HDR/SDR change is detected."/>
        <TextBox x:Name="SDRSettingsFileTextBox" HorizontalAlignment="Left" Margin="185,147,0,0" VerticalAlignment="Top" Width="183" TextChanged="SDRSettingsFileTextBox_TextChanged"/>
        <Button x:Name="SDRSettingsFileBrowseButton" Content="Browse" HorizontalAlignment="Left" Margin="383,146,0,0" VerticalAlignment="Top" Click="SDRSettingsFileBrowseButton_Click"/>
        <CheckBox x:Name="LoadSettingsFileSDRCheckbox" Content="Load Settings File (SDR):" HorizontalAlignment="Left" Margin="19,148,0,0" VerticalAlignment="Top" Checked="LoadSettingsFileSDRCheckbox_CheckedUnchecked" Unchecked="LoadSettingsFileSDRCheckbox_CheckedUnchecked" ToolTip="This does nothing on its own unless you enable switching of profiles when HDR/SDR change is detected."/>
        <CheckBox x:Name="ApplyUponSwitchingToSDRHDRCheckbox" Content="Apply respective gamma file upon switching to HDR/SDR" HorizontalAlignment="Left" Margin="19,182,0,0" VerticalAlignment="Top" Checked="ApplyUponSwitchingToSDRHDRCheckbox_CheckedUnchecked" Unchecked="ApplyUponSwitchingToSDRHDRCheckbox_CheckedUnchecked" ToolTip="Use the polling interval to detect whether the system has switched to/from SDR/HDR and applies the loaded gamma setting files. If no gamma file is loaded, it will simply not apply."/>
        <TextBox x:Name="PollingIntervalTextBox" HorizontalAlignment="Left" Margin="185,214,0,0" TextWrapping="Wrap" Text="1000" VerticalAlignment="Top" Width="120" TextChanged="PollingIntervalTextBox_TextChanged" RenderTransformOrigin="0.544,1.168"/>
        <Label Content="Load these gamma files upon startup:&#xA;" HorizontalAlignment="Left" Margin="12,88,0,0" VerticalAlignment="Top" Height="26"/>
        <Label Content="HDR/SDR Polling Interval (ms)&#xD;&#xA;" HorizontalAlignment="Left" Margin="12,219,0,0" VerticalAlignment="Top" Height="25"/>
        <CheckBox x:Name="ContinuouslyReapplyCheckBox" Content="Continuously re-apply (in case some other app resets gamma)" HorizontalAlignment="Left" Margin="19,254,0,0" VerticalAlignment="Top" Checked="ContinuouslyReapplyCheckBox_CheckedUnchecked" Unchecked="ContinuouslyReapplyCheckBox_CheckedUnchecked" ToolTip="Some other apps or games may reset our custom gamma settings, so that we need to re-apply them."/>
        <Button x:Name="ApplySettingsButton" Content="Apply Settings Now" HorizontalAlignment="Right" Margin="0,0,18,10" VerticalAlignment="Bottom" Click="ApplySettingsButton_Click" Height="33" Width="147" IsEnabled="False" ToolTip="Restarting the app has the same effect since settings are auto-saved."/>
        <CheckBox x:Name="StartMinimizedCheckBox" Content="Start app minimized" Checked="StartMinimizedCheckBox_CheckedUnchecked" Unchecked="StartMinimizedCheckBox_CheckedUnchecked" Margin="139,53,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" ToolTip="Whether to start the app minimized when opening (through any method)."/>
        <Label Content="WARNING: Ensure Windows Automatic Color Management (ACM)&#xD;&#xA;is disabled; otherwise, it will break SDR/HDR detection." HorizontalAlignment="Center" Margin="0,323,0,0" VerticalAlignment="Top" Width="382" Height="54"/>
        <Button x:Name="OpenLogFileButton" Content="Open Log File" HorizontalAlignment="Left" Margin="19,0,0,10" VerticalAlignment="Bottom" Width="119" Height="33" Click="OpenLogButton_Click"/>
        <CheckBox x:Name="DarkModeCheckBox" Content="Dark Mode" HorizontalAlignment="Left" Margin="19,289,0,0" VerticalAlignment="Top" Checked="DarkModeCheckBox_CheckedUnchecked" Unchecked="DarkModeCheckBox_CheckedUnchecked" ToolTip="Dark mode can help prevent triggering monitor dimming/ABL."/>
    </Grid>
</Window>
